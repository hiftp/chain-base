<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="pl_curved_backend_theme.PlListDocumentViewerContent">
        <div class="o_viewer_content">
            <t t-set="model" t-value="widget.modelName" />
            <div class="o_viewer-header position-relative">
                <span class="o_image_caption">
                    <i class="fa fa-picture-o mr8" t-if="widget.pl_activeAttachment.fileType == 'image'" role="img" aria-label="Image" title="Image" />
                    <i class="fa fa-file-text mr8" t-if="widget.pl_activeAttachment.fileType == 'application/pdf'" role="img" aria-label="PDF file" title="PDF file" />
                    <i class="fa fa-video-camera mr8" t-if="widget.pl_activeAttachment.fileType == 'video'" role="img" aria-label="Video" title="Video" />
                    <t t-esc="widget.pl_activeAttachment.name" />
                </span>
                <a role="button" class="o_close_btn float-right position-absolute" style="right:15px;top: 10px;border-radius: 50%;background: #524c4c;height: 30px;width: 30px;text-align: center;color: white;justify-items: center;justify-content: center;padding-top: 4px;" href="#" aria-label="Close" title="Close">X</a>
            </div>
            <div class="o_viewer_img_wrapper">
                <div class="o_viewer_zoomer">
                    <t t-if="widget.pl_activeAttachment.fileType === 'image'">
                        <div class="o_loading_img text-center">
                            <i class="fa fa-circle-o-notch fa-spin text-gray-light fa-3x fa-fw" role="img" aria-label="Loading" title="Loading" />
                        </div>
                        <t t-set="unique" t-value="widget.pl_activeAttachment.checplum ? widget.pl_activeAttachment.checplum.slice(-8) : ''" />
                        <img class="o_viewer_img" t-attf-src="/web/image/#{widget.pl_activeAttachment.id}?unique=#{unique}&amp;model=#{model}" alt="Viewer" />
                    </t>
                    <iframe t-if="widget.pl_activeAttachment.fileType == 'application/pdf'" class="mt32 o_viewer_pdf" t-attf-src="/web/static/lib/pdfjs/web/viewer.html?file=/web/content/#{widget.pl_activeAttachment.id}?model%3D#{model}" />
                    <iframe t-if="(widget.pl_activeAttachment.fileType || '').indexOf('text') !== -1" class="mt32 o_viewer_text" t-attf-src="/web/content/#{widget.pl_activeAttachment.id}?model=#{model}" />
                    <iframe t-if="widget.pl_activeAttachment.fileType == 'youtu'" class="mt32 o_viewer_text" allow="autoplay; encrypted-media" width="560" height="315" t-attf-src="https://www.youtube.com/embed/#{widget.pl_activeAttachment.youtube}" />
                    <video t-if="widget.pl_activeAttachment.fileType == 'video'" class="o_viewer_video" controls="controls">
                        <source t-attf-src="/web/image/#{widget.pl_activeAttachment.id}?model=#{model}" t-att-data-type="widget.pl_activeAttachment.mimetype" />
                    </video>
                </div>
            </div>
            <div t-if="widget.pl_activeAttachment.fileType == 'image'" class="o_viewer_toolbar btn-toolbar" role="toolbar">
                <div class="btn-group" role="group">
                    <a role="button" href="#" class="o_viewer_toolbar_btn btn o_zoom_in" data-toggle="tooltip" title="Zoom In">
                        <i class="fa fa-fw fa-plus" role="img" aria-label="Zoom In" />
                    </a>
                    <a role="button" href="#" class="o_viewer_toolbar_btn btn o_zoom_reset disabled" data-toggle="tooltip" title="Reset Zoom">
                        <i class="fa fa-fw fa-search" role="img" aria-label="Reset Zoom" />
                    </a>
                    <a role="button" href="#" class="o_viewer_toolbar_btn btn o_zoom_out disabled" data-toggle="tooltip" title="Zoom Out">
                        <i class="fa fa-fw fa-minus" role="img" aria-label="Zoom Out" />
                    </a>
                </div>
                <div class="btn-group" role="group">
                    <a role="button" href="#" class="o_viewer_toolbar_btn btn o_rotate" data-toggle="tooltip" title="Rotate">
                        <i class="fa fa-fw fa-repeat" role="img" aria-label="Rotate" />
                    </a>
                </div>
                <div class="btn-group" role="group">
                    <a role="button" href="#" class="o_viewer_toolbar_btn btn o_print_btn" data-toggle="tooltip" title="Print">
                        <i class="fa fa-fw fa-print" role="img" aria-label="Print" />
                    </a>
                    <a role="button" href="#" class="o_viewer_toolbar_btn btn o_download_btn" data-toggle="tooltip" title="Download">
                        <i class="fa fa-fw fa-download" role="img" aria-label="Download" />
                    </a>
                </div>
            </div>
        </div>
    </t>

    <t t-name="pl_curved_backend_theme.PlListDocumentViewer">
        <div class="modal o_modal_fullscreen" tabindex="-1" data-keyboard="false" role="dialog">
            <t class="o_document_viewer_content_call" t-call="pl_curved_backend_theme.PlListDocumentViewerContent" />
        </div>
    </t>
</templates>