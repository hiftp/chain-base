						<svg class="pl_app_drawer_arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M15 8H1" stroke="#616266" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
							<path d="M8 15L1 8L8 1" stroke="#616266" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
						</svg>
					</a>
					<div class="dropdown-menu pl_appdrawer_div" role="menu">
						<div class="pl_user_pic">
							<img class="rounded-circle pl_user_menu_avatar" t-att-src="'/web/image?model=res.users&amp;field=image_128&amp;id=' + props.pl_user_id" alt="Menu" />
							<span class="pl_user_name">
								<t t-esc="props.pl_user_name" />
							</span>
						</div>
						<div class="pl_menu_search align-items-center mb-4">
							<div class="pl_menu_search_box col-md-10 col-xl-8 ml-auto mr-auto mb-2">
								<div class="input-box">
									<div class="input-box-text">
										<i class="fa fa-search o_menu_search_icon" />
									</div>
									<input type="text" autocomplete="off" id="pl_input_text" placeholder="Search..."
                                       class="form-control pl_search_input"/>
								</div>
							</div>
						</div>
						<div class="pl-search-values" />
						<div class="tab-content pl_appdrawer-tab-content h-100">
							<div id="FrequentlyApps" class="tab-pane pl_appdrawer_panel pl_appdrawer_frequent_div">
								<div class="pl_appdrawer_inner_app_div">
									<t t-foreach="_getFrequentApps()" t-as="_app">
										<a t-if="_app" role="menuitem" t-attf-href="#menu_id={{_app.id}}&amp;action_id={{_app.actionID}}" class="dropdown-item o_app" t-att-data-menu-id="_app.id" t-att-data-menu-xmlid="_app.xmlID" t-att-data-action-id="_app.actionID">
											<img class="o-app-icon" t-attf-src="data:image/png;base64,{{_app.webIconData}}" />
											<span class="o-app-name">
												<t t-esc="_app.name" />
											</span>
										</a>
									</t>
								</div>
							</div>
							<div id="AllApps" class="tabContent tab-pane pl_appdrawer_panel pl_appdrawer_main_div active">
								<t t-foreach="_getSplittedApps()" t-as="app">
									<div t-attf-class="pl_appdrawer_inner_app_div item {{app_index == 0 ? 'active': ''}}">
										<div class="dropdown-item" t-foreach="app" t-as="_app">
											<a t-attf-href="#menu_id={{_app.id}}&amp;action_id={{_app.actionID}}" role="menuitem" class="apps_ic o_app" t-att-data-menu-id="_app.id" t-att-data-menu-xmlid="_app.xmlID" t-att-data-action-id="_app.actionID">
												<img class="o-app-icon" t-attf-src="data:image/png;base64,{{_app.webIconData}}" />
												<span class="o-app-name">
													<t t-esc="_app.name" />
												</span>
											</a>
											<t t-if="_app.pl_fav_app">
												<span class="options pl_fav_icon pl_rmv_fav d-none" t-on-click.prevent="_plManageFavApps()">
													<img src="pl_curved_backend_theme/static/src/images/fav_ic.svg" alt="" />
												</span>
											</t>
											<t t-if="!_app.pl_fav_app">
												<span class="options pl_fav_icon pl_add_fav d-none" t-on-click.prevent="_plAddFavApps()">
													<img src="pl_curved_backend_theme/static/src/images/star.svg" alt="" />
												</span>
											</t>
										</div>
									</div>
								</t>
								<ul class="pl-tabs">
									<t t-if="_getSplittedApps() and _getSplittedApps().length > 1">
										<t t-foreach="_getSplittedApps()" t-as="app">
											<li t-attf-class="{{app_index == 0 ? 'active': ''}}">
												<span></span>
											</li>
										</t>
									</t>
								</ul>
							</div>
						</div>
						<div class="pl-app-drawer-close d-none">
							<span class="fav_close">
								<img class="pl_close_app_drawer" src="pl_curved_backend_theme/static/src/images/ap_close_ic.png" alt="close" />
							</span>
						</div>
						<ul class="nav nav-pills apps-drawer-nav pb-3">
							<li class="nav-item">
								<a class="nav-link " data-toggle="pill" href="#FrequentlyApps">
								Frequent
							</a>
							</li>
							<li class="nav-item">
								<a class="nav-link active" data-toggle="pill" href="#AllApps">
								All
							</a>
							</li>
						</ul>
					</div>
				</li>
			</ul>
		</xpath>
	</t>
	<!-- Qweb Template of Search Results in App Drawer -->

	<t t-name="pl_curved_backend_theme.pl_search_menu_items">
		<div class="pl_o_apps">
			<a t-foreach="pl_menu_app" t-as="menu" t-att-data-menu-id="menu.id" t-att-data-action-id="menu.actionID" t-attf-class="pl-menu-search-value dropdown-item {{result_first ? 'active' : ''}}" t-attf-href="#menu_id={{menu.id}}&amp;action_id={{menu.actionID}}" >
				<img t-if="menu.webIconData" class="pl-search-icon-app icon" t-attf-src="/web/image/ir.ui.menu/{{menu.id}}/web_icon_data/50x50" />
				<div t-elif="menu.webIcon" class="o_app_icon o_app_icon_has_pictogram">
					<i t-attf-class="{{menu.webIcon.split(',')[0]}} pl-search-fa-icon" t-attf-style="color: {{menu.webIcon.split(',')[1]}};" />
				</div>
				<div class="o_caption">
					<t t-esc="menu.name" />
				</div>
			</a>
		</div>
		<div class="pl_o_menuitems">
			<a t-foreach="pl_menu_items" t-as="menu" t-att-data-menu-id="menu.id" t-att-data-action-id="menu.actionID" t-attf-class="pl-menu-search-value dropdown-item {{result_first ? 'active' : ''}}" t-attf-href="#menu_id={{menu.id}}&amp;action_id={{menu.actionID}}">
				<span class="o_menuitem_parents">
					<t t-esc="pl_parent_name" />
				</span>
				<t t-esc="'/' + menu.name" />
			</a>
		</div>
	</t>
	<!--
    Hide App menu & menus in case of vertical menu
    @param {web.Menu} widget
    -->
<!--	below template not working-->
	<t t-extend="Menu">
		<t t-jquery=".o_main_navbar" t-operation="replace">
			<t t-if="widget.pl_menu_bar == 'Horizontal' ? 'pl_horizontal_bar' : ''">
				<nav class="o_main_navbar">
					<ul class="o_menu_apps pl-app-open" />
					<t t-if="widget.pl_company_logo">
						<span class="brand_logo">
							<img t-attf-src="data:image/png;base64,#{widget.pl_company_logo}" class="pl_company_short_logo" alt="Company Logo" title="Company Logo" />
						</span>
					</t>
					<a class="o_menu_brand" role="button" />
					<button class="phone-menu-btn">
						<svg width="24" height="16" viewBox="0 0 28 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M2.00043 10.0001H26" stroke="#616266" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
							<path d="M2 2H25.9996" stroke="#616266" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
							<path d="M2.00043 18H26" stroke="#616266" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
						</svg>
					</button>
					<!-- PhoneSideMenu -->
					<div class="pl-phone-side-menu">
						<div class="overlay"></div>
						<div class="pl-phone-menu-list">
							<div class="pl-phone-profile">
								<div class="pl-user-profile-img">
									<img src="https://st.depositphotos.com/2101611/4338/v/600/depositphotos_43381243-stock-illustration-male-avatar-profile-picture.jpg" />
								</div>
								<div class="dropdown">
									<button class="dropdown-toggle pl_user_name" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
									<div class="dropdown-menu pl_user_action_horizontal" aria-labelledby="dropdownMenu2">
										<t t-call="UserMenu.Actions" />
									</div>
								</div>
								<!-- Menu List -->
							</div>
						</div>
					</div>
					<ul class="o_menu_sections" role="menu" />
					<ul class="o_menu_systray" role="menu" />
				</nav>
			</t>
		</t>
	</t>
</templates>