<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pl_switch_language">
        <div class="pl_language_icon">
            <a role="button" href="#" class="language_icon" t-attf-title="Languages"
               aria-label="Languages" data-toggle="dropdown" aria-expanded="false" tabindex="-1" data-display="static">
                <span class="fa fa-language"/>
            </a>
            <div class="dropdown-menu dropdown-menu-right" role="menu">
                <t t-if="widget.languages &amp;&amp; widget.current_language">
                    <t t-foreach="widget.languages" t-as="language">
                        <a role="menuitem" href="#" data-menu="language" t-att-data-language-code="language[0]"
                             class="dropdown-item pl_toggle_language" t-att-style="language[0] == widget.current_language ? 'background-color: lightgrey;' : ''">
                            <t t-esc="language[1]"/>
                        </a>
                    </t>
                </t>
            </div>
        </div>
    </t>
</templates>