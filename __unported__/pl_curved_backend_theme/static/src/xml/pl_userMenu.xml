<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
        <t t-name="pl_curved_backend_theme.pl_usermenu"  t-inherit-mode="extension" t-inherit="web.UserMenu" owl="1">
        <xpath expr="//Dropdown" position="replace">
            <Dropdown class="pl_user_menu o_user_menu" t-on-dropdown-item-selected.stop="onDropdownItemSelected">
            <t t-set-slot="toggler">
                <img class="rounded-circle o_user_avatar" t-att-src="source" alt="User"/>
            </t>
            <div class="pl-user-info-inside-dropdown border-bottom pb-2 px-3">
                <span class="oe_topbar_name"><t t-esc="user.name"/><t t-if="env.debug" t-esc="' (' + user.db.name + ')'"/></span>
            </div>
            <t t-foreach="getElements()" t-as="element" t-key="element_index">
                <t t-if="!element.hide">
                    <UserMenuItem
                        t-if="element.type == 'item'"
                        payload="{ callback: element.callback, id: element.id }"
                        href="element.href"
                        t-esc="element.description"
                    />
                    <div t-if="element.type == 'separator'" role="separator" class="dropdown-divider"/>
                </t>
            </t>
        </Dropdown>
        </xpath>
        </t>
</templates>